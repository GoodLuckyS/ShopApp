<resources>
    <!-- Base application theme. -->

    <style name="Base.V26.Theme.ShopApp" parent="Theme.Material3.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#051C1B1F</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="fontFamily">@font/montserrat</item>
    </style>

    <style name="Base.Theme.ShopApp" parent="Base.V26.Theme.ShopApp" />

    <style name="Theme.ShopApp" parent="Base.Theme.ShopApp">

    </style>

    <style name="Theme.ShopApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
